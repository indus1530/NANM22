<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--The outline turns to colorPrimary when the EditText is in focus-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_color" />
            <corners android:radius="@dimen/border_radius" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/app_color" />
        </shape>
    </item>

    <!--The outline turns to grey when the EditText is out of focus-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_color" />
            <corners android:radius="@dimen/border_radius" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/edittext_border_color" />
        </shape>
    </item>

    <!--Disabled EditText-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/disabled_edittext_color" />
            <corners android:radius="@dimen/border_radius" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/edittext_border_color" />
        </shape>
    </item>

</selector>

